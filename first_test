#include <stdio.h>

int data[3] = {10, 20, 30};
int *p = data;
void find_max(int *arr, int len, int *max_val);
void add5(int *p);
int main()
{
    int max_val;
    printf("Before adding 5:%d %d %d\n", *p, *(p + 1), *(p + 2));
    find_max(p, 3, &max_val);
    printf("max:%d\n", max_val);
    add5(p);
    printf("After adding 5:%d %d %d\n", *p, *(p + 1), *(p + 2));
    return 0;
}

void add5(int *p)
{
    for (int i = 0; i < 3; i++)
    {
        *(p + i) += 5;
    }
}

void find_max(int *arr, int len, int *max_val)
{
    *max_val = *arr;
    for (int i = 0; i < len; i++)
    {
        if (*(arr + i) >= *max_val)
        {
            *max_val = *(arr + i);
        }
    }
}